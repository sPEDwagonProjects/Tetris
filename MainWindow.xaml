<Window x:Class="WpfTetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:WpfTetris.Pages"

        mc:Ignorable="d"

        Title="Tetris By sPEDwagon" FontSize="18" FontFamily="./Resources/#PT Sans Narrow"

        Height="589.2"
        Width="800" Foreground="White">
    <Window.Resources>
    </Window.Resources>

    <Grid>

        <pages:Game Visibility="Collapsed" x:Name="GamePage" />
        <pages:Menu Visibility="Collapsed" x:Name="MenuPage" />
        <pages:Lose x:Name="LosePage" Visibility="Collapsed" />
        <pages:ScoresList Visibility="Collapsed" x:Name="ScoresPage" />
        <pages:TematicEditor Visibility="Collapsed" x:Name="TematicEditorPage" />
        <pages:AccountEdit x:Name="AccountEditPage" Visibility="Collapsed" />
        <pages:GameSettings x:Name="SettingsPage" Visibility="Collapsed" />
        <pages:Pause x:Name="PausePage" Visibility="Collapsed" />
        <pages:Info x:Name="InfoPage" Visibility="Collapsed" />
        <pages:Help x:Name="HelpPage" />
    </Grid>
</Window>